{
  "editor.formatOnSave": true,
  "editor.minimap.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "runOnSave.statusMessageTimeout": 3000,
  "runOnSave.commands": [
    {
      "match": ".*\\.scss$",
      "command": "${workspaceFolder}/node_modules/.bin/node-sass --output-style expanded --indent-type tab --indent-width 1 ${file} ${fileDirname}/${fileBasenameNoExtension}.css",
      "runIn": "backend",
      "runningStatusMessage": "Compiling ${fileBasename}",
      "finishStatusMessage": "${fileBasename} compiled"
    }
  ],

  "code-runner.executorMapByGlob": {
    "*.spec.ts": "$workspaceRoot/node_modules/.bin/jest $fileName"
  },
  "code-runner.executorMapByFileExtension": {
    ".scss": "cd $dir && $workspaceRoot/node_modules/.bin/node-sass --output-style expanded --indent-type tab --indent-width 1 $fileName $fileNameWithoutExt.css"
  }
}
